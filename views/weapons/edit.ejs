<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>
<main>
  <section>
    <h1>Edit the Weapon! </h1>
    <form action="/weapons/<%= weapon._id %>?_method=PUT" method="POST">
      <label >
        Weapon Name:
        <input type="text" name="name" id="new-weapon-input">
      </label>

      
      <br>
      <label >
        Weapon Type:
        <select type="text" name="weaponType" id="new-weapon-input">
          <option value="Greatsword">Greatsword</option>
          <option value="Sword and Shield">Sword and Shield</option>
          <option value="Dual Blades">Dual Blades</option>
          <option value="Long Sword">Long Sword</option>
          <option value="Hammer">Hammer</option>
          <option value="Hunting Horn">Hunting Horn</option>
          <option value="Gunlance">Gunlance</option>
          <option value="Switch Axe">Switch Axe</option>
          <option value="Charge Blade">Charge Blade</option>
          <option value="Insect Glaive">Glaive</option>
          <option value="Bow">Bow</option>
          <option value="Light Bowgun">Light Bowgun</option>
          <option value="Heavy Bowgun">Heavy Bowgun</option>
        </select>
      </label>
      <br>
      <label >
        Attack Power:
        <input type="number" name="attackPower" id="new-weapon-input">
      </label>
      <br>
      <label >
        Weapon Sharpness:
        <select name="sharpness" id="">
          <option value="Red">Red</option>
          <option value="Orange">Orange</option>
          <option value="Yellow">Yellow</option>
          <option value="Green">Green</option>
          <option value="Blue">Blue</option>
          <option value="White">White</option>
          <option value="Purple">Purple</option>
        </select>
      </label>
      <br>
      <label >
        Weapon Affinity:
        <input type="number" name="affinity" id="new-weapon-input" placeholder="1-100%">
      </label>
      <br>
      <label >
          Element:
        <select name="element" id="">
          
          <option value="None">None</option>
          <option value="Fire">Fire</option>
          <option value="Water">Water</option>
          <option value="Thunder">Thunder</option>
          <option value="Ice">Ice</option>
          <option value="Dragon">Dragon</option>
        </select>
      </label>
      <br>
      <label >
          Elderseal:
        <select name="elderseal" id="">
          <option value="None">None</option>
          <option value="Low">Low</option>
          <option value="Average">Average</option>
          <option value="High">High</option>
        </select>
      </label>
      <br>
      <label >
        Slots:
        <input type="number" name="slots" id="new-weapon-input" placeholder="1-3">
      </label>
      <br>
      <label >
          Defense Bonus:
        <input type="number" name="defenseBonus" id="new-weapon-input">
      </label>
      <br>
      <label >
          Notes:
        <select name="notes" id="new-weapon-input">

          <option value="None">None</option>
          <option value="White">White</option>
          <option value="Red">Red</option>
          <option value="Blue">Blue</option>
          <option value="Cyan">Cyan</option>
          <option value="Green">Green</option>
          <option value="Yellow">Yellow</option>
          <option value="Orange">Orange</option>
          <option value="Purple">Purple</option>
        </select>
    </label>
    <br>
    Phial Type:
      <select name="phialType" id="new-weapon-input">
        <option value="None">None</option>
        <option value="Elemental">Elemental</option>
        <option value="Power">Power</option>
        <option value="Paralyze">Paralyze</option>
        <option value="Dragon">Dragon</option>
      </select>
    </label>
    <br>
    Shelling Type:
    <select name="shellingType" id="new-weapon-input">
      <option value="None">None</option>
      <option value="Normal">Normal</option>
      <option value="Long">Long</option>
      <option value="Wide">Wide</option>
    </select>
    </label>
  <br>
  <br>
  <label >
      Shelling Level:
    <input type="number" name="shellingLevel" id="new-weapon-input" placeholder="1-10">
  </label>

    <br>
    Kinsect Bonus:
    <select name="kinsectBonus" id="new-weapon-input">
      <option value="None">None</option>
      <option value="Speed">Speed</option>
      <option value="Stamina">Stamina</option>
      <option value="Health">Health</option>
      <option value="Element">Element</option>
      <option value="Sever">Sever</option>
      <option value="Blunt">Blunt</option>
      <option value="Spirit $ Strength">Spirit $ Strength</option>
      <option value="Stamina & Healing">Stamina & Healing</option>
    </select>
  </label>
  <br>

      <button type="submit">Edit the Weapon</button>
    </form>
  </section>
</main>
<%- include('../partials/footer') %>