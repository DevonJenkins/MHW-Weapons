<% if(weapons.length){   %> 
<main>
  <h1>Weapons List</h1>
  <table>
    <thead>
      <tr>
        <th>Weapon Name</th>
      </tr>
    </thead>
    <tbody>
      <% weapons.forEach( weapon => { %>
        <tr>
          <td> <a href="/weapons/<%= weapon._id %> "><%= weapon.name %> </a></td>
      <% }) %> 
    </tbody>
  </table>
  <% }else{ %>
      <h2>no weapons yet</h2>
  <% } %> 
</main>




