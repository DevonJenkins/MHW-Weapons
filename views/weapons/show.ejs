<h2>stats table here</h2>
<table>
  <thead>
    <!-- <th>Name</th>     -->
    <th>Type</th>    
    <th>Sharpness</th>    
    <th>Affinity</th>    
    <th>Element</th>    
    <th>Elderseal</th>    
    <th>Slots</th>    
    <th>Defense Bonuses</th>    
    <th>Notes</th>    
    <th>Phial Type</th>    
    <th>Shelling Type</th>    
    <th>Shelling Level</th>    
    <th>Kinsect Bonus</th>    
    <th>Coatings</th>    
    <th>Custom Mods</th>    
  </thead>
  <tbody>
    <tr>
      <td><%= //weapon.name %></td>
      <td><%= weapon.weaponType %></td>
      <td><%= weapon.sharpness %></td>
      <td><%= weapon.affinity %></td>
      <td><%= weapon.element %></td>
      <td><%= weapon.elderseal %></td>
      <td><%= weapon.slots %></td>
      <td><%= weapon.defenseBonuses %></td>

      <td><%= weapon.notes %></td>

      <td><%= weapon.phialType %></td>

      <td><%= weapon.shellingType %></td>

      <td><%= weapon.shellingLevel %></td>

      <td><%= weapon.kinsectBonus %></td>
      
      <td><%= weapon.coatings %></td>

      <td><%= weapon.customMods %></td>


    </tr>
  </tbody>
</table>

  <h1>
    <label for="armors">Compatible Armor Pieces:</label>
  </h1>

      <% if (weapon.armors.length){ %>
    <table>
      <thead>

        <th>Name</th>
        <th>Type</th>
        <th>Defense</th>
        <th>Skill</th>

      </thead>
      <tbody>
        <% weapon.armors.forEach(armor => { %>
          <tr>
            
            <td><%= armor.name %></td>
            <td><%= armor.armorType %></td>
            <td><%= armor.defense %></td>
            <td><%= armor.skill %></td>
            
          </tr>
            <% }) %> 
        </tbody>
      </table>
        <% }else{ %>
          <h1>no armor pieces added yet</h1>
          <% } %>  



    <form action="/weapons/<%= weapon.id %>/armors " method="POST">
      <select name="armorId" id="">
        <% armors.forEach( armor => { %>

          <option value="<%=armor._id%>">
            <%= armor.name %> 
            <%= armor.armorType %> 
            <%= armor.defense %> 
            <%= armor.skill %> 
            
          </option>
          <% }) %> 

      </select>
      <button type="submit">submit</button>
    </form>
</main>


